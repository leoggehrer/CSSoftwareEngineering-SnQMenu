@*@CustomerCode*@
@{
    @using CommonBase.Extensions
    @model SnQMenu.AspMvc.Models.IdentityModel

    var viewBagWrapper = Model.ViewBagInfo;
    var property = viewBagWrapper.DisplayProperty;
    var editViewModel = viewBagWrapper.CreateEditViewModel(Model);

    @if (property.Name.Equals("Description")
         || property.Name.Equals("WebsiteText"))
    {
        viewBagWrapper.Handled = true;
        @Html.TextArea(editViewModel.GetName(property), editViewModel.GetDisplayValue(property), 4, 1, new { @class = "form-control" })    
    }
    else
    {
        @await Html.PartialAsync("../Shared/_EditControl", Model)
    }
}
