@*@CustomerCode*@
@{
    @using SnQMenu.AspMvc.Modules.View
    @model SnQMenu.AspMvc.Models.IdentityModel

    var viewBagInfo = Model.ViewBagInfo;
    var property = viewBagInfo.DisplayProperty;
    var displayViewModel = ViewModelCreator.CreateDisplayViewModel(viewBagInfo, Model);

    @if (property.Name.Equals("ImageUrl"))
    {
        viewBagInfo.Handled = true;
        <img src="@displayViewModel.GetDisplayValue(property)" alt="Item image">
    }
    else
    {
        @await Html.PartialAsync("../Shared/_DisplayControl", Model)
    }
}
