@*@CustomerCode*@
@{
    @model SnQMenu.AspMvc.Models.IdentityModel

    var viewBagWrapper = Model.ViewBagInfo;

    @await Html.PartialAsync("../Shared/_CommandControl", Model)
    if (Model is SnQMenu.AspMvc.Models.Persistence.Food.MenuSection section)
    {
        var action = Url.Action("Details", "MenuSectionMenuItems", new { id = section.Id });

        <a type="button" href="@action" class="btn btn-outline-secondary" style="margin: 0px 2px 2px 0px;" title="@viewBagWrapper.TranslateFor("MenuItems")"><i class="fa fa-arrow-circle-right" aria-hidden="true"></i></a>
    }
}
